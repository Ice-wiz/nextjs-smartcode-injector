{
    "compilerOptions": {
      "target": "ES2017", 
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "declaration": true,
      "emitDeclarationOnly": true,
      "rootDir": "./src" ,     
      "outDir": "./dist/types" // Ensure this matches your desired output directory
    },
    "include": ["src/**/*"], // Ensure this includes all TypeScript files in your source directory
    "exclude": ["node_modules"]
  }
